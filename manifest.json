{
  "manifest_version": 2,
  "name" : "Twitch Emotes Remembrall",
  "version": "0.2",
  "content_scripts": [{
    "matches": [
      "http://twitch.tv/*",
      "https://twitch.tv/*",
      "http://*.twitch.tv/*",
      "https://*.twitch.tv/*"
    ],
    "js": [
      "inject-script.js",
      "content.js"
    ],
    "css": [ "css/styles.css" ]
  }],
  "web_accessible_resources": [
    "config.json",
    "scripts/*.js"
  ],
  "background" : {
    "scripts": [ "background.js" ]
  },
  "permissions": [ "storage" ]
}
