{
  "manifest_version": 2,
  "name" : "Twitch Emotes Remembrall",
  "version": "0.1",
  "content_scripts": [{
    "run_at": "document_idle",
    "matches": [
      "http://twitch.tv/*",
      "https://twitch.tv/*",
      "http://*.twitch.tv/*",
      "https://*.twitch.tv/*"
    ],
    "js": [
      "content.js",
      "inject-script.js"
    ],
    "css": [
      "styles.css"
    ]
  }],
  "web_accessible_resources": [
    "config.json",
    "scripts/*.js"
  ],
  "background" : {
    "scripts": [
      "background.js"
    ]
  },
  "permissions": [
    "storage"
  ]
}
